{
  "name": "phrasevault",
  "version": "2.0.0",
  "description": "A phrase management tool",
  "main": "src/main.js",
  "scripts": {
    "start": "sass assets/scss/style.scss assets/css/style.css && electron .",
    "build": "electron-builder",
    "watch": "sass assets/scss/style.scss assets/css/style.css && electronmon .",
    "version-bump": "node version.js",
    "rebuild": "npx electron-rebuild",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "phrase",
    "management",
    "tool",
    "text expander",
    "phrase expander",
    "productivity"
  ],
  "author": "Petermeir Web Solutions",
  "license": "PhraseVault License - See LICENSE.md",
  "dependencies": {
    "node-key-sender": "^1.0.11",
    "node-window-manager": "^2.2.4",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^30.1.0",
    "electron-builder": "^24.13.3",
    "electronmon": "^1.0.5",
    "sass": "^1.35.1"
  },
  "build": {
    "appId": "com.ptmrio.phrasevault",
    "productName": "PhraseVault",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json",
      "templates/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/img/",
        "to": "resources/img/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "LICENSE.md",
        "to": "LICENSE.md"
      }
    ],
    "win": {
      "icon": "assets/img/icon_256x256.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE.md",
      "include": "installer.nsh"
    },
    "forceCodeSigning": false
  }
}
